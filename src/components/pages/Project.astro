---
import TechnologyBadge from "../badge/TechnologyBadge.astro";
import { Card, CardContent, CardHeader, CardTitle } from "../starwind/card";

interface Props {
  project: {
    title: string;
    description: string;
    link?: string;
    technologies: string[];
    isDemo: boolean;
    images?: { src: string; alt?: string }[];
  };
}

const { project } = Astro.props;
---

<section class="py-12 px-6 relative">
  <div class="max-w-6xl mx-auto">
    <div class="flex flex-col lg:flex-row gap-12 lg:gap-24">
      <div class="lg:w-1/3 shrink-0">
        <div class="lg:sticky lg:top-32 space-y-8 animate-fade-in-up">
          <div>
            <h1 class="text-4xl md:text-5xl font-bold leading-tight mb-4">
              {project.title}
            </h1>
          </div>

          <p class="text-muted text-lg leading-relaxed">
            {project.description}
          </p>

          <Card>
            <CardHeader>
              <CardTitle> Tecnologías Utilizadas </CardTitle>
            </CardHeader>
            <CardContent>
              <div class="flex flex-wrap gap-2">
                {
                  project.technologies.map((t) => (
                    <TechnologyBadge technology={t} />
                  ))
                }
              </div>
            </CardContent>
          </Card>
        </div>
      </div>

      <div class="lg:w-2/3 flex flex-col space-y-6">
        {
          project.images?.length ? (
            project.images.map((image) => (
              <a href={`/${image.src}`} class="glightbox">
                <div class="w-full  rounded-2xl overflow-hidden relative flex items-center justify-center border border-stone-100 shadow-sm transition-transform hover:scale-[1.01] duration-500">
                  <img
                    src={`../${image.src}`}
                    alt={image.alt ?? project.title}
                    class="w-full h-auto object-cover"
                  />
                </div>
              </a>
            ))
          ) : (
            <div class="w-full rounded-lg overflow-hidden shadow-lg bg-stone-100 flex items-center justify-center h-64 animate-fade-in-up">
              <span class="text-muted">No hay imágenes disponibles</span>
            </div>
          )
        }
        <div class="flex items-center justify-center py-12">
          <div class="h-px bg-stone-200 w-20"></div>
          <span class="text-muted text-sm px-4">Fin de la galería</span>
          <div class="h-px bg-stone-200 w-20"></div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import GLightbox from "glightbox";

  const lightbox = GLightbox({
    selector: ".glightbox",
    openEffect: "zoom",
    closeEffect: "fade",
    width: "20px",
  });
</script>
