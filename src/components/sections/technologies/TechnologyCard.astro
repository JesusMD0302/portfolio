---
import { tv } from "tailwind-variants";
import TechnologyBadge from "@/components/badge/TechnologyBadge.astro";
import {
  Card,
  CardContent,
  CardDescription,
  CardFooter,
  CardHeader,
  CardTitle,
} from "@/components/starwind/card";

interface Props {
  title: string;
  description: string;
  technologies: string[];
  color?: "orange" | "rose" | "amber";
}

const { title, description, technologies, color = "orange" } = Astro.props;

const cardIcon = tv({
  base: "w-14 h-14 rounded-xl flex items-center justify-center mb-6 border",
  variants: {
    color: {
      orange: "bg-orange-100 border-orange-200",
      rose: "bg-rose-100 border-rose-200",
      amber: "bg-amber-100 border-amber-200",
    },
  },
  defaultVariants: {
    color: "orange",
  },
});
---

<Card
  class="glass-card hover-card border border-[#ffffff99] transition-all ease-in-out duration-300 hover:-translate-y-1.5 hover:border-primary/30 flex flex-col"
>
  <CardHeader class="">
    <div class={cardIcon({ color })}>
      <slot />
    </div>
    <CardTitle>{title}</CardTitle>
    <CardDescription>{description}</CardDescription>
  </CardHeader>
  <CardContent>
    <div class="flex flex-wrap gap-2">
      {technologies.map((tech) => <TechnologyBadge technology={tech} />)}
    </div>
  </CardContent>
</Card>
