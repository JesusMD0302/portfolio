---
import SectionTitle from "../title/SectionTitle.astro";
import TechnologyCard from "./TechnologyCard.astro";
---

<section id="habilidades" class="py-24 px-6 relative">
  <div class="max-w-6xl mx-auto">
    <SectionTitle title="Tecnologías & Habilidades" number="01" />

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <!-- Backend Card -->
      <TechnologyCard
        title="Backend & Bases de Datos"
        description="Diseño y mantenimiento de APIs, y gestión de bases de datos."
        technologies={["Node.js", "PHP", "MongoDB", "MySQL", "PostgreSQL"]}
        ><svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-7 h-7 text-orange-600"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"
          ></path>
        </svg></TechnologyCard
      >

      <!-- Frontend Card -->
      <TechnologyCard
        color="rose"
        title="Frontend Moderno"
        description="Creación de interfaces responsivas, accesibles y con excelente experiencia de usuario."
        technologies={[
          "React",
          "Next.js",
          "Astro",
          "HTML",
          "CSS",
          "TypeScript",
          "Tailwind CSS",
          "Figma",
        ]}
        ><svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-7 h-7 text-rose-600"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9.75 17L9 21h6l-.75-4M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
          ></path>
        </svg></TechnologyCard
      >

      <!-- DevOps & Tools Card -->
      <TechnologyCard
        color="amber"
        title="Herramientas"
        description="Tecnologías y metodologías para el control de versiones, la gestión y desarrollo de proyectos."
        technologies={["Git / GitHub", "Linux", "Agile / Scrum", "Jira"]}
        ><svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-7 h-7 text-amber-600"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.82 2.26 2.572a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.82 3.31-2.572 2.26a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.82-2.26-2.572a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.82-3.31 2.572-2.26a1.724 1.724 0 002.572-1.065z"
          ></path>
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg></TechnologyCard
      >
    </div>
  </div>
</section>
